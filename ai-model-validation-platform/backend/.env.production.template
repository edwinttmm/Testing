# =============================================================================
# PRODUCTION Environment Configuration Template
# =============================================================================
# Copy this file to .env.production and update with your production values
# NEVER commit production .env files to version control

# =============================================================================
# CRITICAL PRODUCTION SECURITY SETTINGS
# =============================================================================
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AIVALIDATION_SECRET_KEY=REPLACE-WITH-PRODUCTION-SECRET-KEY

# Production Environment
AIVALIDATION_APP_ENVIRONMENT=production
AIVALIDATION_API_DEBUG=false
AIVALIDATION_API_RELOAD=false

# =============================================================================
# PRODUCTION DATABASE (PostgreSQL REQUIRED)
# =============================================================================
AIVALIDATION_DATABASE_URL=postgresql://username:password@localhost:5432/vru_validation
AIVALIDATION_DATABASE_POOL_SIZE=20
AIVALIDATION_DATABASE_MAX_OVERFLOW=40
DATABASE_SSLMODE=require

# =============================================================================
# PRODUCTION API CONFIGURATION
# =============================================================================
AIVALIDATION_API_HOST=0.0.0.0
AIVALIDATION_API_PORT=8000
AIVALIDATION_API_BASE_URL=https://yourdomain.com

# =============================================================================
# PRODUCTION CORS (Restrict to your domains)
# =============================================================================
AIVALIDATION_CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# SSL/TLS CONFIGURATION (REQUIRED FOR PRODUCTION)
# =============================================================================
AIVALIDATION_SSL_ENABLED=true
AIVALIDATION_SSL_CERT_FILE=/path/to/certificate.pem
AIVALIDATION_SSL_KEY_FILE=/path/to/private.key

# =============================================================================
# SECURITY HEADERS (RECOMMENDED FOR PRODUCTION)
# =============================================================================
AIVALIDATION_SECURITY_HEADERS_ENABLED=true
AIVALIDATION_HSTS_ENABLED=true
AIVALIDATION_CSP_ENABLED=true

# =============================================================================
# PRODUCTION LOGGING
# =============================================================================
AIVALIDATION_LOG_LEVEL=INFO
AIVALIDATION_LOG_FILE=/var/log/ai-validation/app.log
AIVALIDATION_LOG_MAX_BYTES=52428800  # 50MB
AIVALIDATION_LOG_BACKUP_COUNT=10

# =============================================================================
# REDIS (RECOMMENDED FOR PRODUCTION CACHING)
# =============================================================================
AIVALIDATION_REDIS_URL=redis://localhost:6379/0
AIVALIDATION_REDIS_PASSWORD=your-redis-password
AIVALIDATION_ENABLE_CACHING=true

# =============================================================================
# FILE UPLOADS (PRODUCTION LIMITS)
# =============================================================================
AIVALIDATION_MAX_FILE_SIZE=52428800  # 50MB for production
AIVALIDATION_UPLOAD_DIRECTORY=/var/uploads/ai-validation

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
AIVALIDATION_HEALTH_CHECK_ENABLED=true
AIVALIDATION_METRICS_ENABLED=true
AIVALIDATION_MONITORING_TOKEN=your-monitoring-secret-token

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
AIVALIDATION_DEFAULT_PAGE_SIZE=50
AIVALIDATION_MAX_PAGE_SIZE=500
AIVALIDATION_REQUEST_TIMEOUT=30

# =============================================================================
# FEATURE FLAGS (ENABLE PRODUCTION FEATURES)
# =============================================================================
AIVALIDATION_ENABLE_GROUND_TRUTH_SERVICE=true
AIVALIDATION_ENABLE_VALIDATION_SERVICE=true
AIVALIDATION_ENABLE_ASYNC_PROCESSING=true

# Legacy support
SECRET_KEY=${AIVALIDATION_SECRET_KEY}
DATABASE_URL=${AIVALIDATION_DATABASE_URL}
API_HOST=${AIVALIDATION_API_HOST}
API_PORT=${AIVALIDATION_API_PORT}
ALLOWED_ORIGINS=${AIVALIDATION_CORS_ORIGINS}
APP_ENV=${AIVALIDATION_APP_ENVIRONMENT}
LOG_LEVEL=${AIVALIDATION_LOG_LEVEL}
UPLOAD_DIRECTORY=${AIVALIDATION_UPLOAD_DIRECTORY}