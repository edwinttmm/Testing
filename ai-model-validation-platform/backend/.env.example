# =============================================================================
# AI Model Validation Platform - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update the values for your environment
# NEVER commit .env files to version control

# =============================================================================
# SECURITY CONFIGURATION - CRITICAL FOR PRODUCTION
# =============================================================================
# Generate a secure secret key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
AIVALIDATION_SECRET_KEY=REPLACE-WITH-SECURE-32-CHAR-RANDOM-STRING

# Legacy support for existing config (will be deprecated)
SECRET_KEY=${AIVALIDATION_SECRET_KEY}

# JWT Configuration
AIVALIDATION_JWT_SECRET_KEY=${AIVALIDATION_SECRET_KEY}
AIVALIDATION_JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Development (SQLite)
AIVALIDATION_DATABASE_URL=sqlite:///./app.db

# Production (PostgreSQL) - Replace with your actual credentials
# AIVALIDATION_DATABASE_URL=postgresql://username:password@localhost:5432/vru_validation

# Legacy support
DATABASE_URL=${AIVALIDATION_DATABASE_URL}
DATABASE_ECHO=false
DATABASE_SSLMODE=prefer

# Database Pool Settings
AIVALIDATION_DATABASE_POOL_SIZE=10
AIVALIDATION_DATABASE_MAX_OVERFLOW=20

# =============================================================================
# API SERVER CONFIGURATION
# =============================================================================
AIVALIDATION_API_HOST=0.0.0.0
AIVALIDATION_API_PORT=8000
AIVALIDATION_API_DEBUG=false
AIVALIDATION_API_RELOAD=false
AIVALIDATION_API_BASE_URL=http://localhost:8000

# Legacy support
API_HOST=${AIVALIDATION_API_HOST}
API_PORT=${AIVALIDATION_API_PORT}

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
AIVALIDATION_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Legacy support
ALLOWED_ORIGINS=${AIVALIDATION_CORS_ORIGINS}

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
AIVALIDATION_APP_ENVIRONMENT=development
AIVALIDATION_LOG_LEVEL=INFO
AIVALIDATION_MAX_FILE_SIZE=104857600  # 100MB in bytes
AIVALIDATION_UPLOAD_DIRECTORY=uploads

# Legacy support
APP_ENV=${AIVALIDATION_APP_ENVIRONMENT}
LOG_LEVEL=${AIVALIDATION_LOG_LEVEL}
MAX_UPLOAD_SIZE=${AIVALIDATION_MAX_FILE_SIZE}
UPLOAD_DIRECTORY=${AIVALIDATION_UPLOAD_DIRECTORY}
STATIC_DIRECTORY=./static

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================
# Redis for caching and sessions
AIVALIDATION_REDIS_URL=redis://localhost:6379/0

# Email configuration (if needed)
# AIVALIDATION_SMTP_SERVER=smtp.gmail.com
# AIVALIDATION_SMTP_PORT=587
# AIVALIDATION_EMAIL_USER=your-email@example.com
# AIVALIDATION_EMAIL_PASSWORD=your-app-password

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# SSL/TLS Configuration
AIVALIDATION_SSL_ENABLED=false
AIVALIDATION_SSL_CERT_FILE=
AIVALIDATION_SSL_KEY_FILE=

# Security Headers
AIVALIDATION_SECURITY_HEADERS_ENABLED=true
AIVALIDATION_HSTS_ENABLED=false  # Enable for HTTPS
AIVALIDATION_CSP_ENABLED=true