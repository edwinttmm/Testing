# =============================================================================
# DEVELOPMENT Environment Configuration Template
# =============================================================================
# Copy this file to .env.development for development settings

# =============================================================================
# DEVELOPMENT SECURITY SETTINGS
# =============================================================================
# Development-safe secret key (generate new for production)
AIVALIDATION_SECRET_KEY=dev-secret-key-not-for-production-use-only

# Development Environment
AIVALIDATION_APP_ENVIRONMENT=development
AIVALIDATION_API_DEBUG=true
AIVALIDATION_API_RELOAD=true

# =============================================================================
# DEVELOPMENT DATABASE (SQLite for simplicity)
# =============================================================================
AIVALIDATION_DATABASE_URL=sqlite:///./dev_database.db
AIVALIDATION_TEST_DATABASE_URL=sqlite:///./test_database.db

# =============================================================================
# DEVELOPMENT API CONFIGURATION
# =============================================================================
AIVALIDATION_API_HOST=127.0.0.1
AIVALIDATION_API_PORT=8000
AIVALIDATION_API_BASE_URL=http://localhost:8000

# =============================================================================
# DEVELOPMENT CORS (Permissive for local development)
# =============================================================================
AIVALIDATION_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# =============================================================================
# DEVELOPMENT LOGGING
# =============================================================================
AIVALIDATION_LOG_LEVEL=DEBUG
AIVALIDATION_LOG_FILE=logs/dev.log
AIVALIDATION_LOG_MAX_BYTES=10485760  # 10MB
AIVALIDATION_LOG_BACKUP_COUNT=3

# =============================================================================
# DEVELOPMENT FILE UPLOADS
# =============================================================================
AIVALIDATION_MAX_FILE_SIZE=104857600  # 100MB for development
AIVALIDATION_UPLOAD_DIRECTORY=uploads

# =============================================================================
# DEVELOPMENT FEATURES (Enable for testing)
# =============================================================================
AIVALIDATION_ENABLE_GROUND_TRUTH_SERVICE=true
AIVALIDATION_ENABLE_VALIDATION_SERVICE=true
AIVALIDATION_ENABLE_ASYNC_PROCESSING=false
AIVALIDATION_ENABLE_CACHING=false

# =============================================================================
# DEVELOPMENT SECURITY (Relaxed for development)
# =============================================================================
AIVALIDATION_SSL_ENABLED=false
AIVALIDATION_SECURITY_HEADERS_ENABLED=false
AIVALIDATION_HSTS_ENABLED=false
AIVALIDATION_CSP_ENABLED=false

# =============================================================================
# DEVELOPMENT MONITORING
# =============================================================================
AIVALIDATION_HEALTH_CHECK_ENABLED=true
AIVALIDATION_METRICS_ENABLED=false

# Legacy support
SECRET_KEY=${AIVALIDATION_SECRET_KEY}
DATABASE_URL=${AIVALIDATION_DATABASE_URL}
API_HOST=${AIVALIDATION_API_HOST}
API_PORT=${AIVALIDATION_API_PORT}
ALLOWED_ORIGINS=${AIVALIDATION_CORS_ORIGINS}
APP_ENV=${AIVALIDATION_APP_ENVIRONMENT}
LOG_LEVEL=${AIVALIDATION_LOG_LEVEL}
UPLOAD_DIRECTORY=${AIVALIDATION_UPLOAD_DIRECTORY}