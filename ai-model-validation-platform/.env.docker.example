# =============================================================================
# Docker Compose Environment Configuration
# =============================================================================
# Copy this file to .env.docker for Docker deployment configuration
# This file will be used by docker-compose.yml

# =============================================================================
# DEPLOYMENT HOSTS (Configure for your environment)
# =============================================================================
BACKEND_HOST=127.0.0.1
FRONTEND_HOST=127.0.0.1
DATABASE_HOST=127.0.0.1
REDIS_HOST=127.0.0.1

# For production, use your actual domain/IP
# BACKEND_HOST=your-domain.com
# FRONTEND_HOST=your-domain.com
# DATABASE_HOST=your-db-server.com

# =============================================================================
# APPLICATION ENVIRONMENT
# =============================================================================
APP_ENV=development
NODE_ENV=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=vru_validation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure_password_change_me

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=secure_redis_password

# =============================================================================
# BACKEND SECURITY
# =============================================================================
# CRITICAL: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
AIVALIDATION_SECRET_KEY=GENERATE_SECURE_KEY_FOR_PRODUCTION

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_DEBUG=false
REACT_LOG_LEVEL=warning
GENERATE_SOURCEMAP=false

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# =============================================================================
# APP_ENV=production
# NODE_ENV=production
# REACT_DEBUG=false
# REACT_LOG_LEVEL=error
# BACKEND_HOST=your-production-domain.com
# FRONTEND_HOST=your-production-domain.com