# VRU AI Model Validation Platform - Unified Environment Configuration
# Template for all environments with 155.138.239.131 support

# Environment Configuration
VRU_ENVIRONMENT=development
VRU_DEBUG=true
VRU_EXTERNAL_IP=155.138.239.131

# Server Configuration
VRU_API_HOST=0.0.0.0
VRU_API_PORT=8000
VRU_FRONTEND_PORT=3000

# Database Configuration (SQLite for development)
VRU_DATABASE_TYPE=sqlite
VRU_DATABASE_URL=sqlite:///./dev_database.db
VRU_DATABASE_ECHO=false
VRU_DATABASE_POOL_SIZE=10
VRU_DATABASE_MAX_OVERFLOW=20

# Redis Configuration
VRU_REDIS_URL=redis://localhost:6379
VRU_REDIS_PASSWORD=secure_redis_password
VRU_CACHE_TTL=300

# Security Configuration
VRU_SECRET_KEY=dev-secret-key-change-in-production-environment
VRU_JWT_ALGORITHM=HS256
VRU_JWT_EXPIRATION=3600

# CORS Configuration with External IP Support
VRU_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://155.138.239.131:3000,https://155.138.239.131:3000

# ML Model Configuration
VRU_YOLO_MODEL_PATH=./models/yolov8n.pt
VRU_DETECTION_CONFIDENCE_THRESHOLD=0.5
VRU_MAX_VIDEO_SIZE_MB=500

# Upload Configuration
VRU_UPLOAD_DIRECTORY=./uploads
VRU_MAX_FILE_SIZE_MB=500
VRU_ALLOWED_VIDEO_EXTENSIONS=.mp4,.avi,.mov,.mkv,.flv,.webm

# Feature Flags
VRU_ENABLE_CVAT_INTEGRATION=false
VRU_ENABLE_REAL_TIME_DETECTION=false
VRU_ENABLE_BATCH_PROCESSING=true
VRU_ENABLE_AUDIT_LOGGING=true
VRU_ENABLE_PERFORMANCE_MONITORING=true

# API Configuration
VRU_API_V1_PREFIX=/api/v1
VRU_DOCS_URL=/docs
VRU_REDOC_URL=/redoc
VRU_OPENAPI_URL=/openapi.json

# Uvicorn Configuration
VRU_UVICORN_WORKERS=1
VRU_UVICORN_RELOAD=true
VRU_UVICORN_ACCESS_LOG=true

# Additional Configuration for Docker
COMPOSE_PROJECT_NAME=vru-validation-platform
COMPOSE_PROFILES=development

# Legacy Support (for backward compatibility)
DATABASE_URL=sqlite:///./dev_database.db
AIVALIDATION_DATABASE_URL=sqlite:///./dev_database.db
AIVALIDATION_API_PORT=8000
AIVALIDATION_API_HOST=0.0.0.0
AIVALIDATION_SECRET_KEY=dev-secret-key-change-in-production-environment
AIVALIDATION_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://155.138.239.131:3000