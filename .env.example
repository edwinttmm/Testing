# GPU Detection and Library Configuration Environment Variables

# Force CPU-only mode (disables all GPU acceleration)
# Set to 'true' to force CPU-only processing even if GPU is available
REACT_APP_FORCE_CPU_ONLY=false

# Disable GPU detection entirely
# Set to 'true' to skip GPU detection and assume no GPU is available
REACT_APP_DISABLE_GPU_DETECTION=false

# Preferred backend for TensorFlow.js
# Options: 'webgl', 'cpu', 'wasm', 'auto'
REACT_APP_PREFERRED_BACKEND=auto

# Enable debug information for GPU detection
# Set to 'true' to log detailed GPU detection information
REACT_APP_DEBUG_GPU_INFO=false

# MINGW64 compatibility mode (Windows Git Bash)
# Set to 'true' when running in MINGW64 environment
MINGW64_COMPAT=false

# Maximum image size limits (in pixels)
REACT_APP_MAX_IMAGE_WIDTH=4096
REACT_APP_MAX_IMAGE_HEIGHT=4096

# Memory limits for image processing (in MB)
REACT_APP_MEMORY_LIMIT=512

# Default image quality for exports (0-1)
REACT_APP_DEFAULT_QUALITY=0.9

# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL=false

# Library preferences (comma-separated priority list)
# Options: tensorflow, opencv, sharp, jimp, canvas
REACT_APP_LIBRARY_PRIORITY=tensorflow,opencv,sharp,jimp,canvas

# Enable WebAssembly optimizations
REACT_APP_ENABLE_WASM=true

# Disable specific libraries (comma-separated)
# Use this to exclude problematic libraries in specific environments
REACT_APP_DISABLE_LIBRARIES=

# Custom model URLs for TensorFlow.js
REACT_APP_CUSTOM_MODEL_URL=

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false

# Cache settings
REACT_APP_ENABLE_CACHE=true
REACT_APP_CACHE_SIZE_LIMIT=100

# Development settings
NODE_ENV=development
GENERATE_SOURCEMAP=true

# Build optimization settings
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_OPTIMIZE_IMAGES=true

# Security settings
REACT_APP_ALLOW_EXTERNAL_IMAGES=false
REACT_APP_CORS_MODE=cors

# Platform specific settings
REACT_APP_PLATFORM=web
REACT_APP_TARGET_BROWSERS=defaults

# Error handling
REACT_APP_ENABLE_ERROR_BOUNDARY=true
REACT_APP_ERROR_REPORTING=false

# Logging levels
REACT_APP_LOG_LEVEL=info

# Feature flags
REACT_APP_ENABLE_FACE_DETECTION=true
REACT_APP_ENABLE_OBJECT_DETECTION=true
REACT_APP_ENABLE_TEXT_RECOGNITION=false
REACT_APP_ENABLE_BACKGROUND_REMOVAL=true

# GPU specific settings
REACT_APP_GPU_MEMORY_GROWTH=true
REACT_APP_GPU_MEMORY_LIMIT=1024