{
  "name": "ai-model-validation-api-tests",
  "version": "2.0.0",
  "description": "Comprehensive API integration test suite for AI Model Validation Platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:api": "jest --testPathPattern=tests/.*test\\.ts$",
    "test:integration": "jest api-integration-test-suite.ts",
    "test:schema": "jest api-schema-validation-tests.ts",
    "test:errors": "jest api-error-handling-tests.ts",
    "test:performance": "jest api-performance-tests.ts",
    "test:websocket": "jest websocket-integration-tests.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html --coverageReporters=text",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance-only": "jest api-performance-tests.ts --testTimeout=60000",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf coverage dist"
  },
  "keywords": [
    "api-testing",
    "integration-testing",
    "performance-testing",
    "schema-validation",
    "websocket-testing",
    "ai-model-validation"
  ],
  "author": "Claude Code API Testing Agent",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "axios": "^1.6.2",
    "socket.io-client": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "roots": ["<rootDir>"],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/mocks/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html",
      "lcov",
      "clover"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testTimeout": 30000,
    "maxWorkers": 4,
    "verbose": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}